<form id="settings_plugin_portretry" class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Interval:') }}</label>
        <div class="controls" data-toggle="tooltip" title="{{ _('The interval with which to retry connecting the printer.') }}">
            <div class="input-append">
                <input type="number" step="1" min="0.1" class="input-mini text-right" data-bind="value: settings.plugins.portretry.interval">
                <span class="add-on">secs</span>
            </div>
        </div>
    </div>
</form>
